{
    "name": "collab-canvas",
    "version": "1.0.0",
    "description": "Collaborative canvas application with real-time video communication",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "nodemon --watch src/server --ext ts --exec tsx src/server/server.ts",
        "dev:client": "vite",
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite build",
        "build:server": "tsc -p tsconfig.server.json",
        "start": "cd .. && node dist/server/server.js || node dist/server/server.js",
        "preview": "vite preview"
    },
    "keywords": [
        "collaborative",
        "canvas",
        "webrtc",
        "socket.io"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "socket.io": "^4.6.1",
        "typescript": "^5.9.3",
        "vite": "^5.0.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.6",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.11",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.0"
    }
}
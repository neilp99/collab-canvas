{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist/server",
        "rootDir": "./src/server",
        "skipLibCheck": true,
        /* Type checking */
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}